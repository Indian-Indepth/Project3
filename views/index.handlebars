<section class="py-2">
    <div class="row">
        <div class="col-md-6 text-center">
            <h1 class="display-3 mt-3 pt-5">
                Payment-Gateway
            </h1>
            <p>shopping cart</p>
            <form action="/Charge" method="POST">
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="{{stripePublishableKey}}"
                    data-amount="2500"
                    data-name="Product name"
                    data-description="Payment-Gateway"
                    data-image = "/img/marketplace.png"
                    data-locale="auto">
                    </script>
                    <script>
                        {{!-- // Hide default stripe button --}}
                        document.getElementsByClassName('stripe-button-el')[0].style.display ='none';
                        
                    </script>
                    <button type="submit" class="btn btn-outline-dark text-white btn-lg">Purchase For $25</button>
            </form>
        </div>
        <div class="col-md-6">
            <img src="/img/favicon.ico" alt="" class="img-fluid">
        </div>
    </div>
</section>